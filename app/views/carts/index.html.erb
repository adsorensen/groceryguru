<h1>Cart#index</h1>
<p>Find me in app/views/cart/index.html.erb</p>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Recipe</th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
        <tr>
          <td><%= cart.user %></td>
          <td><%= cart.recipe %></td>
          <td><%= link_to 'Show', cart %></td>
          <td><%= link_to 'Edit', edit_cart_path(cart) %></td>
          <td><%= link_to 'Destroy', cart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>
