<head>
    <%= stylesheet_link_tag "users_show" %>
</head>
<body>
<h1><center>Meal Plans</center></h1>
    <h2>Grocery Guru Meal Plans</h2>
    <table>
        <thead>
            <tr>
                <td>Meal Plan Name</td>
            </tr>
        </thead>
        <tbody>
        <% 
            @sponsored.each do |plan|
        %> 
        <tr>
            <td><a href="/mealplans/<%= plan.id %>"><%= plan.name %></a></td>
        </tr>
        <% end %>
        </tbody>
    </table>
    <br>
    <h2>Your Meal Plans</h2>
    <table>
        <thead>
            <tr>
                <td>Meal Plan Name</td>
            </tr>
        </thead>
        <tbody>
        <% 
            @userPlans.each do |plan|
        %> 
        <tr>
            <td><a href="/mealplans/<%= plan.id %>"><%= plan.name %></a></td>
        </tr>
        <% end %>
        </tbody>
    </table>
    <button onclick="newPlan()">New Meal Plan</button>
</body>