<p id="notice"><%= notice %></p>
<head>
<style> 
input[type=text] {
    width: 300px;
    box-sizing: border-box;
    border: 2px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
    padding: 12px 20px 12px 20px;
    -webkit-transition: width 0.4s ease-in-out;
    transition: width 0.4s ease-in-out;
}

input[type=text]:focus {
    width: 80%;
}

input[type=submit] {
    font-size: large;
}
.container1 {
  text-align: center;
}
.cellContainer {
  width: 25%;
  float: left;
}
#manualentry {
  display: inline-block;
}
#copypaste {
  display: inline-block;
}
#url {
  display: inline-block;
}
</style>
</head>
<br><br><br><br>
<h3>Search for a recipe:</h3>
<br>
<center>
<%= form_tag(recipes_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Recipes" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>
</center>

<br>
<hr>
<br>

<h3>Upload a recipe via:</h3>
<div class="container1">
  <div id="manualentry"><%= link_to(image_tag("cookbook.png", :alt => "cookbook", :size => "100x100", :style => "background-color: white;"), new_recipe_path) %><br><%= link_to 'Manual Entry', new_recipe_path %></div>
  <div id="copypaste"><%= link_to(image_tag("copypaste.png", :alt => "clipboard", :size => "100x100", :style => "background-color: white;"), new_recipe_path) %><br><%= link_to 'Copy/Paste', new_recipe_path %></div>
  <div id="url"><%= link_to(image_tag("url.png", :alt => "http", :size => "100x100", :style => "background-color: white;"), "recipes/url" ) %><br><%= link_to 'URL', "recipes/url" %></div>
</div>

<br>
<hr>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Ingredients</th>
      <th>Instructions</th>
      <th>Note</th>
      <th>Tags</th>
      <th>Origin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.description %></td>
        <td><%= recipe.ingredients %></td>
        <td><%= recipe.instructions %></td>
        <td><%= recipe.note %></td>
        <td><%= recipe.tags %></td>
        <td><%= recipe.origin %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to "Add to cart", carts_path(:user => session['user_id'], :recipe => recipe.id), :method => :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>