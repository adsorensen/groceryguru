<h1>Add New Recipe</h1>

<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br><br><br><br>
<style>
  table {
    border: 5px solid black;
    padding: 10px;
    align :center
  }
  td{
    padding: 10px 20;     /* 10px top & bottom padding, 0px left & right */
    border-width: 1px 1px; /*  1px top & bottom border,  0px left & right */
    border-color: black;
    border-style: solid;
  }
  tr{
    border-right: 1px solid black;
  }
  th{
     border-bottom: 1px solid black;
  }
</style>

<%= javascript_include_tag('newRecipe.js') %>
  <div class="field">
    <%= f.label "Recipe Title" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :ingredients %><br>
    <%= f.text_area :ingredients %>
  </div>
  <div class="field">
    <%= f.label :instructions %><br>
    <%= f.text_field :instructions %>
  </div>
  <div class="field">
    <%= f.label :origin %><br>
    <%= f.text_field :origin %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>


<div class= "table-holder"><center>
  <h3>Ingredients</h3><button id='addIngredient' type="button">Add Ingredient</button>
  <table id="ingredients"><tbody>
    <tr>
      <th>Quantity</th>
      <th>Unit</th>
      <th>Ingredient</th>
