<p id="notice"><%= notice %></p>

<h1>Listing Saved Recipes</h1>

<table>
  <thead>
    <tr>
      <th>Personal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @saved_recipes.each do |saved_recipe| %>
      <tr>
        <td><%= saved_recipe.personal %></td>
        <td><%= link_to 'Show', saved_recipe %></td>
        <td><%= link_to 'Edit', edit_saved_recipe_path(saved_recipe) %></td>
        <td><%= link_to 'Destroy', saved_recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Saved recipe', new_saved_recipe_path %>
